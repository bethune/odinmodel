[module manyToMany('http://www.eclipse.org/uml2/5.0.0/UML')]

[import com::vladolium::odinmodel::domain::field::fieldLombok /]

[template public manyToMany(aClass : Class)]

[comment : For all relatinships of the current entity./]
[for (p : Property | aClass.getAssociations().memberEnd)]
	[if p.lower = 0 and p.upper = -1 and p.type.name.toUpperFirst() = aClass.name.toUpperFirst() and
		p.namespace = association and p.opposite.lower = 0 and p.opposite.upper = -1] [comment : Generate the manyToMany relationship./]
@ManyToMany
@JoinTable(name="[p.type.name.toLowerFirst()/]_[p.opposite.type.name.toLowerFirst()/]", 
	joinColumns = @JoinColumn(name = "[p.type.name.toLowerFirst()/]_id"), 
	inverseJoinColumns = @JoinColumn(name = "[p.opposite.type.name.toLowerFirst()/]_id"))
[aClass.fieldLombok()/]
private Set<[p.opposite.type.name.toUpperFirst()/]> [p.opposite.type.name.toLowerFirst()/]Set = new HashSet<>();
	[/if]
[/for]

[/template]
