[module checkConstraints('http://www.eclipse.org/uml2/5.0.0/UML')]

[import com::vladolium::odinmodel::projects::java::models::jpa::entities::fields::constraints::primaryKeyJpaConstraint/]
[import com::vladolium::odinmodel::projects::java::models::jpa::entities::fields::constraints::notNullJpaConstraint/]
[import com::vladolium::odinmodel::projects::java::models::jpa::entities::fields::constraints::uniqueJpaConstraint/]
[import com::vladolium::odinmodel::projects::java::models::jpa::entities::fields::constraints::otherJpaConstraint/]

[**
 * Checks for constraints over a field.
 *    
 * @param field represents the current field from the current UML class.
 * @param target represents the application components for which template generates code.
*/]
[template public checkConstraints(field: Property, target: String) post(trim())]
[comment: Primary key /]
[if field.isID = true]
	[if target = 'jpa']
	[primaryKeyJpaConstraint()/]
	[/if]
[/if]
[comment: Not null /]
[if field.lower = 1 and field.isID = false]
	[if target = 'jpa']
	[notNullJpaConstraint()/]
	[/if]
[/if]
[comment: Unique /]
[if field.isUnique = true and field.isID = false]
	[if target = 'jpa']
	[uniqueJpaConstraint()/]
	[/if]
[/if]	
[comment: Other free entry constraints /]
[if field.ownedComment._body->isEmpty() = false ]
	[if target = 'jpa']
	[otherJpaConstraint()/]
	[/if]
[/if]
[/template]